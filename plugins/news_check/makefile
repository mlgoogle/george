# Please tweak it to suit your environment and project.  You
# may want to move it to your project's root directory.
#
# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.


# Where to find user code.
# c++ access hbase dependence
LIB_DIR = ./../../../library
USER_DIR = ./../../
SO_DIR = ./../../bin/plugins
STOCKSVC = ./../../plugins
ARITHMETIC = $(USER_DIR)pub/arithmetic/
BASE_DIR = ./../base
THIRD_PATH = $(LIB_DIR)/public

CUSTOM_THIRD_PATH = $(LIB_DIR)/third_party

LINK_PATHS = -L./ -L/usr/local/libmemcached-1.0.7/lib/  -L/usr/lib64 -L/usr/lib64/mysql -L${THRIFT_LIB_DIR}

# Flags passed to the preprocessor.
CPPFLAGS += -isystem -shared -fPIC -D_DB_POOL_ -D_DEBUG -DUSR_LOG_MSG -DPROCESS_WORK

# Flags passed to the C++ compiler.
CXXFLAGS += -g  -Wextra -pthread -shared -fPIC

# All tests produced by this Makefile.  Remember to add new tests you
# created to the list.
PLUGIN = $(SO_DIR)/news/news.so
                
INCLUDE_PATHS = -I/usr/local/libmemcached-1.0.7/include \
				-I/usr/local/libmemcached/include\
				-I/usr/local/freetds/include\
				-I$(LIB_DIR)\
				-I$(THIRD_PATH)\
				-I/usr/local/include\
				-I/usr/include/mysql\
				-I$(USER_DIR)\
				-I$(USER_DIR)\pub\
				-I$(CUSTOM_THIRD_PATH)/hiredis\
				-I$(CUSTOM_THIRD_PATH)\
				-I$(LIB_DIR)/base\
				-I$(LIB_DIR)/base/db\
				-I$(BASE_DIR)\
				-I$(LIB_DIR)/public\
				-I$(STOCKSVC)\
				-I$(LIB_DIR)/third_party/hiredis\
				-I$(LIB_DIR)/third_party\
				-I$(ARITHMETIC) \
				
# House-keeping build targets.

ALL_HEADERS = $(USER_HEADERS)
all : $(PLUGIN) delete-temp-file

clean :
	rm -f $(PLUGIN)  *.o

delete-temp-file:
	-rm -f ./*.o
	
news_init.o : ./news_init.cc ./news_init.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./news_init.cc $(INCLUDE_PATHS) 

news_logic.o : ./news_logic.cc ./news_logic.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./news_logic.cc $(INCLUDE_PATHS)
		
news_mysql.o : ./news_mysql.cc ./news_mysql.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./news_mysql.cc $(INCLUDE_PATHS)
	
news_memery.o : ./news_memery.cc ./news_memery.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./news_memery.cc $(INCLUDE_PATHS)
	
news_interface.o : ./news_interface.cc ./news_interface.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./news_interface.cc $(INCLUDE_PATHS)
	
news.o : ./news.cc ./news.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./news.cc $(INCLUDE_PATHS)
	
http_data.o : $(USER_DIR)pub/net/http_data.cc $(USER_DIR)pub/net/http_data.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)pub/net/http_data.cc $(INCLUDE_PATHS)
	
tools.o : $(USER_DIR)pub/tools/tools.cc $(USER_DIR)pub/tools/tools.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)pub/tools/tools.cc $(INCLUDE_PATHS)

global.o : $(USER_DIR)pub/global/global.cc $(USER_DIR)pub/global/global.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)pub/global/global.cc $(INCLUDE_PATHS)

tea.o:$(ARITHMETIC)tea/tea.cc $(ARITHMETIC)tea/tea.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(ARITHMETIC)tea/tea.cc $(INCLUDE_PATHS)

error_comm.o :  $(USER_DIR)pub/net/error_comm.cc $(USER_DIR)pub/net/error_comm.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)pub/net/error_comm.cc $(INCLUDE_PATHS)
	
logic_basic_info.o :  $(USER_DIR)pub/logic/logic_basic_info.cc $(USER_DIR)pub/logic/logic_basic_info.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)pub/logic/logic_basic_info.cc $(INCLUDE_PATHS)

logic_unit.o :  $(USER_DIR)pub/logic/logic_unit.cc $(USER_DIR)pub/logic/logic_unit.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)pub/logic/logic_unit.cc $(INCLUDE_PATHS)
	
http_packet.o: $(THIRD_PATH)/protocol/http_packet.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/protocol/http_packet.cc $(INCLUDE_PATHS)
	
mig_log.o: $(THIRD_PATH)/log/mig_log.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/log/mig_log.cc $(INCLUDE_PATHS)
	
basictypes.o: $(THIRD_PATH)/basic/basictypes.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/basic/basictypes.cc $(INCLUDE_PATHS)
	
basic_util.o: $(THIRD_PATH)/basic/basic_util.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/basic/basic_util.cc $(INCLUDE_PATHS)
	
config.o: $(THIRD_PATH)/config/config.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/config/config.cc $(INCLUDE_PATHS)
	
data_engine.o : ./$(USER_DIR)pub/storage/data_engine.cc ./$(USER_DIR)pub/storage/data_engine.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(USER_DIR)pub/storage/data_engine.cc $(INCLUDE_PATHS)

data_mysql_engine.o : ./$(USER_DIR)pub/storage/data_mysql_engine.cc ./$(USER_DIR)pub/storage/data_mysql_engine.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(USER_DIR)pub/storage/data_mysql_engine.cc $(INCLUDE_PATHS)

mysql_pool.o : ./$(USER_DIR)pub/storage/mysql_pool.cc ./$(USER_DIR)pub/storage/mysql_pool.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(USER_DIR)pub/storage/mysql_pool.cc $(INCLUDE_PATHS)

$(PLUGIN) : news_init.o news_logic.o news_mysql.o news_memery.o \
	news_interface.o news.o data_engine.o data_mysql_engine.o mysql_pool.o \
	http_data.o http_packet.o mig_log.o basictypes.o error_comm.o tools.o \
	logic_basic_info.o logic_unit.o basic_util.o config.o tools.o tea.o global.o \
	$(CUSTOM_THIRD_PATH)/dmg_fp/lib/dmg_fp.a $(LIB_DIR)/base/lib/mybase.a 
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(LINK_PATHS) -lpthread -lexpat -lrt -lpthread -ldl -liconv -lmysqlclient -lcurl \
	$^ -o $@
