# Please tweak it to suit your environment and project.  You
# may want to move it to your project's root directory.
#
# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.


# Where to find user code.
# c++ access hbase dependence
LIB_DIR = ./../../../library
USER_DIR = ./../../
SO_DIR = ./../../bin/plugins
STOCKSVC = ./../../plugins
ARITHMETIC = $(USER_DIR)pub/arithmetic/
BASE_DIR = ./../base
THIRD_PATH = $(LIB_DIR)/mylib/public

CUSTOM_THIRD_PATH = $(LIB_DIR)/mylib/third_party

LINK_PATHS = -L./ -L/usr/local/libmemcached-1.0.7/lib/  -L/usr/lib64 -L/usr/lib64/mysql -L${THRIFT_LIB_DIR}

# Flags passed to the preprocessor.
CPPFLAGS += -w -isystem -shared -fPIC -D_DEBUG -DUSR_LOG_ERROR -DUSR_LOG_MSG -DPROCESS_WORK

# Flags passed to the C++ compiler.
CXXFLAGS += -g  -Wextra -pthread -shared -fPIC

# All tests produced by this Makefile.  Remember to add new tests you
# created to the list.
PLUGIN = $(SO_DIR)/search/search.so
                
INCLUDE_PATHS = -I/usr/local/libmemcached-1.0.7/include \
				-I/usr/local/libmemcached/include\
				-I/usr/local/freetds/include\
				-I$(LIB_DIR)\
				-I$(THIRD_PATH)\
				-I/usr/local/include\
				-I/usr/include/mysql\
				-I$(USER_DIR)\
				-I$(USER_DIR)\pub\
				-I$(CUSTOM_THIRD_PATH)/hiredis\
				-I$(CUSTOM_THIRD_PATH)\
				-I$(LIB_DIR)/mylib/base\
				-I$(LIB_DIR)/mylib/base/db\
				-I$(BASE_DIR)\
				-I$(LIB_DIR)/BasicCore\
				-I$(LIB_DIR)/mylib/public\
				-I$(STOCKSVC)\
				-I$(LIB_DIR)/mylib/third_party/hiredis\
				-I$(LIB_DIR)/mylib/third_party\
				-I$(ARITHMETIC) \
				
# House-keeping build targets.

ALL_HEADERS = $(USER_HEADERS)
all : $(PLUGIN) delete-temp-file

clean :
	rm -f $(PLUGIN)  *.o

delete-temp-file:
	-rm -f ./*.o
	
search_init.o : ./search_init.cc ./search_init.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./search_init.cc $(INCLUDE_PATHS) 

search_logic.o : ./search_logic.cc ./search_logic.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./search_logic.cc $(INCLUDE_PATHS)
		
search_mysql.o : ./search_mysql.cc ./search_mysql.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./search_mysql.cc $(INCLUDE_PATHS)
	
search_memery.o : ./search_memery.cc ./search_memery.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./search_memery.cc $(INCLUDE_PATHS)
	
search_interface.o : ./search_interface.cc ./search_interface.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./search_interface.cc $(INCLUDE_PATHS)
	
search.o : ./search.cc ./search.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./search.cc $(INCLUDE_PATHS)
	
search_packet.o : ./search_packet.cc ./search_packet.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./search_packet.cc $(INCLUDE_PATHS)
	
search_proto_buf.o : ./search_proto_buf.cc ./search_proto_buf.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./search_proto_buf.cc $(INCLUDE_PATHS)
	
http_data.o : $(USER_DIR)pub/net/http_data.cc $(USER_DIR)pub/net/http_data.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)pub/net/http_data.cc $(INCLUDE_PATHS)
	
tools.o : $(USER_DIR)pub/tools/tools.cc $(USER_DIR)pub/tools/tools.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)pub/tools/tools.cc $(INCLUDE_PATHS)

error_comm.o :  $(USER_DIR)pub/net/error_comm.cc $(USER_DIR)pub/net/error_comm.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(USER_DIR)pub/net/error_comm.cc $(INCLUDE_PATHS)
	
http_packet.o: $(THIRD_PATH)/protocol/http_packet.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/protocol/http_packet.cc $(INCLUDE_PATHS)
	
mig_log.o: $(THIRD_PATH)/log/mig_log.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/log/mig_log.cc $(INCLUDE_PATHS)
	
basictypes.o: $(THIRD_PATH)/basic/basictypes.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/basic/basictypes.cc $(INCLUDE_PATHS)
	
basic_util.o: $(THIRD_PATH)/basic/basic_util.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/basic/basic_util.cc $(INCLUDE_PATHS)
	
config.o: $(THIRD_PATH)/config/config.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/config/config.cc $(INCLUDE_PATHS)
	
data_engine.o : ./$(USER_DIR)pub/storage/data_engine.cc ./$(USER_DIR)pub/storage/data_engine.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(USER_DIR)pub/storage/data_engine.cc $(INCLUDE_PATHS)

data_mysql_engine.o : ./$(USER_DIR)pub/storage/data_mysql_engine.cc ./$(USER_DIR)pub/storage/data_mysql_engine.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(USER_DIR)pub/storage/data_mysql_engine.cc $(INCLUDE_PATHS)

mysql_pool.o : ./$(USER_DIR)pub/storage/mysql_pool.cc ./$(USER_DIR)pub/storage/mysql_pool.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(USER_DIR)pub/storage/mysql_pool.cc $(INCLUDE_PATHS)

packet_process.o : ./$(USER_DIR)pub/net/packet_process.cc ./$(USER_DIR)pub/net/packet_process.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(USER_DIR)pub/net/packet_process.cc $(INCLUDE_PATHS)

proto_buf.o : ./$(USER_DIR)pub/net/proto_buf.cc ./$(USER_DIR)pub/net/proto_buf.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(USER_DIR)pub/net/proto_buf.cc $(INCLUDE_PATHS)
		
base_values.o : ./$(LIB_DIR)/base/logic/base_values.cc ./$(LIB_DIR)/base/logic/base_values.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(LIB_DIR)/base/logic/base_values.cc $(INCLUDE_PATHS)

$(PLUGIN) : search_init.o search_logic.o search_mysql.o search_memery.o \
	search_interface.o search.o search_packet.o search_proto_buf.o data_engine.o data_mysql_engine.o mysql_pool.o \
	error_comm.o tools.o \
	packet_process.o proto_buf.o \
	$(CUSTOM_THIRD_PATH)/dmg_fp/lib/dmg_fp.a $(LIB_DIR)/mylib/base/lib/mybase.a 
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(LINK_PATHS) -lpthread -lexpat -lrt -lpthread -ldl -lmysqlclient -lcurl \
	$^ -o $@
