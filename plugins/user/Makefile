# Builds a sample test.  A test should link with either gtest.a or
# gtest_main.a, depending on whether it defines its own main()
# function.

user_init.o : ./user_init.cc ./user_init.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./user_init.cc $(INCLUDE_PATHS) 

user_logic.o : ./user_logic.cc ./user_logic.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./user_logic.cc $(INCLUDE_PATHS)

user_factory.o : ./user_factory.cc ./user_factory.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./user_factory.cc $(INCLUDE_PATHS)
	
user_info.o : ./user_info.cc ./user_info.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./user_info.cc $(INCLUDE_PATHS)

user_db.o : ./user_db.cc ./user_db.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./user_db.cc $(INCLUDE_PATHS)

user_proto_buf.o : ./user_proto_buf.cc ./user_proto_buf.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./user_proto_buf.cc $(INCLUDE_PATHS)

user_register_mgr.o : ./user_register_mgr.cc ./user_register_mgr.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./user_register_mgr.cc $(INCLUDE_PATHS)

user_login_mgr.o : ./user_login_mgr.cc ./user_login_mgr.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./user_login_mgr.cc $(INCLUDE_PATHS)

user_packet_process.o : ./user_packet_process.cc ./user_packet_process.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./user_packet_process.cc $(INCLUDE_PATHS)
	
packet_process.o : ./$(PUB_DIR)/net/packet_process.cc ./$(PUB_DIR)/net/packet_process.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(PUB_DIR)/net/packet_process.cc $(INCLUDE_PATHS)
	
proto_buf.o : ./$(PUB_DIR)/net/proto_buf.cc ./$(PUB_DIR)/net/proto_buf.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(PUB_DIR)/net/proto_buf.cc $(INCLUDE_PATHS)

data_engine.o : ./$(PUB_DIR)/storage/data_engine.cc ./$(PUB_DIR)/storage/data_engine.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(PUB_DIR)/storage/data_engine.cc $(INCLUDE_PATHS)
	

data_mysql_engine.o : ./$(PUB_DIR)/storage/data_mysql_engine.cc ./$(PUB_DIR)/storage/data_mysql_engine.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(PUB_DIR)/storage/data_mysql_engine.cc $(INCLUDE_PATHS)
	
mysql_pool.o : ./$(PUB_DIR)/storage/mysql_pool.cc ./$(PUB_DIR)/storage/mysql_pool.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(PUB_DIR)/storage/mysql_pool.cc $(INCLUDE_PATHS)

token.o : ./$(PUB_DIR)/check/token.cc ./$(PUB_DIR)/check/token.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./$(PUB_DIR)/check/token.cc $(INCLUDE_PATHS)

$(TEST) : 

$(PLUGIN) : user_init.o user_logic.o user_factory.o user_packet_process.o user_proto_buf.o\
	user_info.o user_db.o user_register_mgr.o proto_buf.o mysql_pool.o token.o data_mysql_engine.o\
	packet_process.o data_engine.o user_login_mgr.o\
	$(CUSTOM_THIRD_PATH)/dmg_fp/lib/dmg_fp.a $(LIB_DIR)/mylib/base/lib/mybase.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(LINK_PATHS) -lexpat -lrt -lpthread -ldl -lmysqlclient \
	$^ -o $@
